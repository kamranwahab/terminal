extends ../layout

block content
    h1 Edit Product
    form(action="/products/edit/"+product._id,method="post")
        .form-group
            label(for="name", class="spacer") Product Name
            input#name(type="text", class="form-control", name="name", value=product.name)
        .form-group
            label(for="price", class="spacer") Product Price
            input#price(type="text", class="form-control", name="price", value=product.price)
        .form-group
            label(for="discription", class="spacer") Product Description
            input#discription(type="text", class="form-control", name="discription", value=product.discription)
        div(class="d-grid gap-2", class="spacer")
            input(type="submit", class="btn btn-lg btn-info" value="Update")