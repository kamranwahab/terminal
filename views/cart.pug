extends layout

block content
  h1 My shopping Cart
  - var total=0;
    table.table
      thead
        th(style="width: 25%") Name of Item
        th(style="width: 25%") Price of Item
        th(style="width: 35%") Rating for Item
        th Actions
      tbody
        each item in cart
          - total += Number(item.price)
          tr
            td=item.name
            td=item.price
            td
              if item.rating > 0
                  span(class="fa fa-star fa-lg checked")
              else 
                  span(class="fa fa-star fa-lg ")
              if item.rating > 1
                  span(class="fa fa-star fa-lg checked")
              else 
                  span(class="fa fa-star fa-lg")
              if item.rating > 2
                  span(class="fa fa-star fa-lg checked")
              else 
                  span(class="fa fa-star fa-lg")
              if item.rating > 3
                  span(class="fa fa-star fa-lg checked")
              else 
                  span(class="fa fa-star fa-lg")
              if item.rating > 4
                  span(class="fa fa-star fa-lg checked")
              else 
                  span(class="fa fa-star fa-lg")
            td
              a(href="/products/cart/remove/"+item._id, class="btn btn-danger") Remove Item
      tfoot
        tr
          td 
            h3 Total Amount
          td
            h3
              b=total
